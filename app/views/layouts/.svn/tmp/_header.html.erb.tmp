<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href="/">ATK</a>
      <ul class="nav">
        <li <%= 'class=active' if controller_name == 'welcome' %>><%= link_to "Mypage", :controller=>:welcome, :action => :index %></li>
        <li <%= 'class=active' if controller_name == 'tests' %>><%= link_to "Tests", :controller => :tests, :action => :index %></li>
        <li <%= 'class=active' if controller_name == 'questions' %>><%= link_to "Create", :controller => :questions, :action => :new %></li>
        <li <%= 'class=active' if controller_name == 'ranking' %>><%= link_to "Ranking", :controller => :ranking, :action => :index %></li>
        <% if @user.uid == User::MORIYAMA || @user.uid == User::KONYA || @user.uid == User::AONO %>
          <li <%= 'class=active' if controller_name == 'admin' %>><%= link_to "UI page", :controller => :admin, :action => :index %></li>
        <% end %>
      </ul>
      <form accept-charset="UTF-8" class="navbar-search pulll-right" action="/tests/search_test" method="post">
        <input id="search_words" type="text" class="search-query input-small span3" name="search_words"  placeholder="テストを検索">
      </form>
      <% if current_user %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src=<%=current_user.image_url %> width="20" height="20" alt="" />
              <%= current_user.nickname %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Setting', :controller => "welcome", :action => "profile", :id => current_user.id %></li>
              <li class="divider"></li>
              <li><%= link_to 'Logout', logout_path %></li>
            </ul>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

