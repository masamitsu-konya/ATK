<div class="row">
  
  <div class="span3 offset1 ranking-side-box">
    <div class="well">
      <% if @past_test_categories%> 
        <h3>あなたが受けたテスト</h3>
        <%@past_test_categories.each do |category| %>
          <a href="/ranking/index?id=<%=category.id%>">
            <%= image_tag category.category_image.thumb('40x40#').url  if category.category_image %><span><%= category.category_name %></span>
          </a>
        <% end %>
      <% else %>
        まだテスト受けてないよ！早くうけようよ！
      <% end %>
    </div>
  </div>

  <div class="span7 ranking-box">
    <% if @ranking %>
      <h2><%= @ranking_category.category_name %>&nbsp;ランキング</h2>
      <table class="table table-bordered table-striped">
        <thead>
          <th class="span1">ランク</th>
          <th>ユーザー</th>
          <th class="span2">スコア</th>
        </thead>
        <%@ranking.each do |rank| %>
          <tbody>
            <td class="rank"><%=rank.rank%></td>
            <td class="user">
              <img src=<%=rank.user.image_url %> width="50" height="50" alt="" />
              <%= rank.user.last_name %>
            </td>
            <td class="score"><%= rank.score%>点</td>
          </tbody>
        <% end %>
      </table>
    <% end %>
  </div>

</div>
