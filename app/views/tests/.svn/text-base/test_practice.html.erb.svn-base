<div class="row">

  <div class="span2">
    <h1 class="category-info-box">
      <%= image_tag @sample_question.category_of_question.category_image.url if @sample_question.category_of_question.category_image%>
      <%= @sample_question.category_of_question.category_name %>
    </h1>
  </div>

  <div class="span8">

    <div class="question-box">
      <p class="question"></p>
    </div>

    <div class="progress progress-striped active">
      <div class="bar" style="width 100%;"></div>
    </div>

    <div class="result-box row">
      <div class="span2 box">
        <span class="title">問題ランク</span>
        <span class="question_level">##</span>
      </div>
      <div class="span2 box">
        <span class="title">点数</span>
        <span class="question_point">PRACTICE</span>
      </div>
      <div class="span2 box">
        <span class="title">合計</span>
        <span class="test_sum_score">PRACTICE</span>
      </div>
      <div class="btn-box">
        <%= form_tag :action => "test" do %>
          <input type="hidden" class="category_of_question_id" name="category_of_question_id" value="<%= @sample_question.category_of_question_id %>">
          <input type="hidden" class="question_id" name="question_id" value="<%= @sample_question.id %>">
          <input type="hidden" class="question_result" name="question_result">
          <input type="hidden" class="question_count" name="question_count">
          <input type="hidden" class="user_id" name="user_id">
          <input id="next_question" type="submit" class="btn btn-large btn-primary" value="本番へ" onClick="location.href='/tests/test'">
        <% end %>
      </div>
    </div>

    <div class="answer-box">
      <a href="javascript:void(0)" id="answer1"></a>
      <a href="javascript:void(0)" id="answer2"></a>
      <a href="javascript:void(0)" id="answer3"></a>
      <a href="javascript:void(0)" id="answer4"></a>
      <div class="hide-box">
        <div class="label"></div>
      </div>
    </div>
  
  </div>

</div>

<script>
  var answer = new Array(<%= raw @sample_question.correct_answer.to_json %>, <%= raw @sample_question.answer_1.to_json %>, <%= raw @sample_question.answer_2.to_json %>, <%= raw @sample_question.answer_3.to_json %>);
  var question = <%= raw @sample_question.question.to_json %>;
  var question_id = <%= @sample_question.id %>;
  var correct_answer = <%= raw @sample_question.correct_answer.to_json %>;
  var user_id = <%= current_user.id %>;
  var category_id = <%= @sample_question.category_of_question_id %>;
  var question_count = <%= @question_count %>;
  var score_s = 0;
</script>
