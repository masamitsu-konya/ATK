<div id="top_box">
  <div class="left_box">
      <%= form_for (@question), :class=> "well form-inline color_change", :url=>{:action => 'finish', :id=>@question.id } do |f| %>
        <h1>問題編集ページ</h1>
        <%= f.hidden_field :category_of_question_id, :value => @category_of_question.id %>
        <p class="title" style="margin-top: 15px;">Question</p>
        <%=f.text_area :question , :class=>"question"%>
        <p class="title" style="margin-top: 10px;">正解</p>
        <%=f.text_field :correct_answer, :class=>'question_field'%>
        <p class="title">間違い</p>
        <%=f.text_field :answer_1 , :class=>'question_field'%><br/>
        <%=f.text_field :answer_2 , :class=>'question_field' %><br/>
        <%=f.text_field :answer_3 , :class=>'question_field'%><br/>
        <button type="submit" class="btn btn-warning" style="margin-top: 20px;">変更する</button>
      <% end %>

  </div>
  <div class="inform_box">
    <p><%= @category_of_question.category_name %></p>
    <img src="/<%= @category_of_question.id %>.png" width="100" height="100" alt="" />
    <p>４択で問題を作ってください。</p>
    <hr size="1">
    <h3>Your <%= @category_of_question.category_name %> Questions</h1>
    <h3>FAQs: Adding Test Questions</h1>
  </div>
</div>





















