<div class="row">
  <div class="span8">
    <%= form_for (@question), :url=>{:action => 'finish', :id=>@question.id } do |f| %>
      <%= f.hidden_field :category_of_question_id, :value => @category_of_question.id %>
      <p class="title">correct</p>
      <%=f.text_area :question , :class => "span8 question-textarea", :placeholder => 'plese write question' %>
      <div class="answer-box">
        <p class="title">correct</p>
        <%=f.text_field :correct_answer, :class => 'span8', :placeholder => 'plese write correct answer' %>
        <p class="title">wrong</p>
        <%=f.text_field :answer_1 , :class => 'span8', :placeholder => 'plese write wrong answer' %>
        <%=f.text_field :answer_2 , :class => 'span8', :placeholder => 'plese write wrong answer' %>
        <%=f.text_field :answer_3 , :class => 'span8', :placeholder => 'plese write wrong answer' %>
      </div>
      <div class="row">
        <button type="submit" class="btn btn-large btn-warning span2">change</button>
      </div>
    <% end %>
  </div>

  <div class="span3 offset1">
    <p><%= @category_of_question.category_name %></p>
    <%= image_tag @category_of_question.category_image.url %> 
    <hr>
    <h3>Your <%= @category_of_question.category_name %> Questions</h3>
    <h3>FAQs: Adding Test Questions</h3>
  </div>
</div>

