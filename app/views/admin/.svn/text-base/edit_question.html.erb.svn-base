<div class="row">
  <div class="span8">
    <%= form_for (@question), :url=>{:action => 'finish', :id=>@question.id } do |f| %>
      <h1>問題編集</h1>
      <p>４択で問題を作ってください。</p>
      <%= f.hidden_field :category_of_question_id, :value => @category_of_question.id %>
      <p class="title">問題</p>
      <%=f.text_area :question , :class => "span8 question-textarea", :placeholder => '問題を入力してください' %>
      <div class="answer-box">
        <p class="title">正解</p>
        <%=f.text_field :correct_answer, :class => 'span8', :placeholder => '正解を入力してください' %>
        <p class="title">間違い</p>
        <%=f.text_field :answer_1 , :class => 'span8', :placeholder => '間違いを入力してください' %>
        <%=f.text_field :answer_2 , :class => 'span8', :placeholder => '間違いを入力してください' %>
        <%=f.text_field :answer_3 , :class => 'span8', :placeholder => '間違いを入力してください' %>
      </div>
      <div class="row">
        <button type="submit" class="btn btn-large btn-warning span2">変更する</button>
      </div>
    <% end %>
  </div>

  <div class="span3 offset1">
    <p><%= @category_of_question.category_name %></p>
    <%= image_tag @category_of_question.category_image.url %> 
    <hr>
    <h3>Your <%= @category_of_question.category_name %> Questions</h3>
    <h3>FAQs: Adding Test Questions</h3>
  </div>
</div>

