<div class="row">
  <div class="span8">
    <%= form_for (@question), :url=>{:action => 'finish'} do |f| %>
     <h1>問題作成</h1>
     <p>４択で問題を作ってください。</p>
     <%= f.hidden_field :category_of_question_id, :value => @category_of_question.id %>
      <p class="title">Question</p>
      <textarea class="question" cols="20" name="question[question]" rows="20" placeholder="問題を入力してください。"></textarea>
      <p class="title">正解</p>
      <input id="question_correct_answer" name="question[correct_answer]" size="30" type="text" placeholder="正解を入力してください。" class="span3">
      <p class="title">間違い</p>
      <input id="question_answer_1" name="question[answer_1]" size="30" type="text" placeholder="間違いを入力してください。"><br/>
      <input id="question_answer_2" name="question[answer_2]" size="30" type="text" placeholder="間違いを入力してください。"><br/>
      <input id="question_answer_3" name="question[answer_3]" size="30" type="text" placeholder="間違いを入力してください。"><br/>
      <%= f.fields_for :user_question, @question.user_question || UserQuestion.new do |f2| %>
        <%= f2.hidden_field :user_id, :value => current_user.id %>
      <% end %>
      <button type="submit" class="btn btn-warning">作成</button>
    <% end %>

  </div>

  <div class="inform_box">
    <p><%= @category_of_question.category_name %></p>
    <%= image_tag @category_of_question.category_image.url %> 
    <hr size="1">
    <h3>Your <%= @category_of_question.category_name %> Questions</h1>
    <h3>FAQs: Adding Test Questions</h1>
  </div>
</div>

